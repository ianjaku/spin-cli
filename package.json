{
  "name": "spin-cli",
  "version": "0.1.0",
  "description": "Beautiful interactive CLI for managing multiple dev services",
  "type": "module",
  "bin": {
    "spin": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "terminal",
    "tui",
    "dev",
    "services",
    "logs",
    "process-manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "fullscreen-ink": "^0.1.0",
    "ink": "^5.1.0",
    "jiti": "^2.4.2",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
